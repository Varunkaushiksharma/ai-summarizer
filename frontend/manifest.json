{
  "manifest_version": 3,
  "name": "AI Text Summarizer",
  "version": "1.0",
  "description": "Summarize selected text using AI",
  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
